!!!
%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}
    %title= content_for?(:title) ? "#{yield(:title)} | Shasta Dogs" : "Shasta Dogs"
    = csrf_meta_tags
    = stylesheet_link_tag "application", :media => "all"
  %body{id: current_page?(root_path) ? "home" : "sub"}
    .container
      .content
        .row-fluid
          .span12
            %ul#main-nav
              %li= link_to image_tag("ovaldog.png"), root_path
              %li= link_to "Dog Blog", posts_path
              - Page.where{show_in_navigation.eq true}.all.each do |page|
                %li= link_to page.title.titleize, page
                  
        .row-fluid
          .span12
            %div#main
              %div.row-fluid
                - if current_page?(root_path)
                  %div.span12
                    = yield
                - else
                  %div.span8
                    - flash.each do |name, msg|
                      %div{class: "alert alert-#{flash_class(name)}"}
                        = msg
                    = yield
                  %div.span4
                    %div#sidebar
                      = render "sidebar"
            %footer
              %ul#footer-nav
                %li= "&copy #{Date.today.year} Shasta Dogs".html_safe
                %li= link_to "Shasta Dogs on Facebook", "https://www.facebook.com/ShastaDogs"
                %li= link_to "Contact Us", "mailto:shastadogswebmaster@gmail.com"
      
    = javascript_include_tag "application"