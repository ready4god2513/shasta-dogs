@import "_imports"
$ie: true

body
  background: url(<%= asset_path("kuda.jpg") %>) no-repeat center center fixed
  background-size: 100%
  margin-bottom: 50px
  
#content
  padding: 10px
  
.redactor_text
  height: 300px
  
h1, h2, h3, h4, h5, h6
  color: $tealDark
  font-family: "open sans condensed"
  text-transform: uppercase
  
  small
    color: $gray
    
#home
  #dog-of-the-day
    position: absolute
    bottom: 0
    left: 0
    background: rgba(255, 255, 255, 0.7)
    border-top: 4px solid $tealDark
    padding: 0 10px
    width: 100%
    
.navbar-inner
  background: none !important
  border: none !important
  @include box-shadow(0 0)

  ul
    li
      font-size: 1.3em
      font-family: "open sans condensed"
      font-weight: 200
      margin: 20px 5px
      text-transform: uppercase
      
      a, a:hover
        background: rgba(0, 0, 0, 0.4) !important
        color: $white
        padding: 10px !important
        &:hover
          color: $tealDark
    
  img
    width: 120px
      
#main
  background: $white
  border: 4px solid $tealDark
  border-left: none
  border-right: none
  padding: 20px

  img
    display: inline
    margin: 10px
    max-width: 350px

  #myCarousel
    .item
      height: 500px
      img
        margin: 0
        max-height: 500px
        max-width: 100%
        width: 100%
      .carousel-caption
        background: rgba(0, 0, 0, 0.9)
        color: #fff

  .redactor_text
    border: 1px solid #e8e8e8
    margin-bottom: 20px !important
    padding-bottom: 10px !important
    
  #content
    a
      color: $teal !important
      &:visted
        color: $blue !important
    
  #sidebar
    h3
      background: url(<%= asset_path("dogpawprints-vlv-2.gif") %>) no-repeat left
      background-size: 20px 20px
      padding-left: 25px
  
#footer-nav
  li
    display: inline-block
    margin: 20px 10px

@import "mobile"