@import "_imports"

body
  // background: url(<%= asset_path("headerpineneedle.png") %>) repeat-x top left, url(<%= asset_path("inner-bg.png") %>) top repeat-x
  background-image: url(http://biscuitsspace.files.wordpress.com/2013/02/img_1724-3-lady.jpg)
  background-position: top right
  -webkit-background-size: cover
  -moz-background-size: cover
  -o-background-size: cover
  background-size: cover
  min-height: 800px
  
#content
  padding: 10px
  
.redactor_text
  height: 300px
  
h1, h2, h3, h4
  color: $grayDark
  font-family: "open sans condensed"
  text-shadow: 1px 1px 1px $grayLight
  text-transform: capitalize
  
ul#main-nav
  display: block
  margin: 0 auto
  
  li
    display: inline-block
    margin: 10px
    
    a
      color: #fff
    
    img
      width: 150px
      
#main
  background: $white
  margin-bottom: 50px
  padding: 20px
  
  img
    display: inline
    margin: 10px
    max-width: 200px
    
  #sidebar
    h3
      background: url(http://anniepaulose.files.wordpress.com/2011/01/dogpawprints-vlv-2.gif) no-repeat left
      background-size: 20px 20px
      padding-left: 25px
      