@import "_imports"

body
  // background: url(<%= asset_path("headerpineneedle.png") %>) repeat-x top left, url(<%= asset_path("inner-bg.png") %>) top repeat-x
  background-image: url(<%= asset_path("img_1724-3-lady.jpg") %>)
  background-position: top right
  -webkit-background-size: cover
  -moz-background-size: cover
  -o-background-size: cover
  background-size: cover
  margin-bottom: 50px
  
#content
  padding: 10px
  
.redactor_text
  height: 300px
  
h1, h2, h3, h4, h5, h6
  color: $tealDark
  font-family: "open sans condensed"
  text-transform: uppercase
  
  small
    color: $gray
  
ul#main-nav, #footer-nav
  display: block
  margin: 0 auto
  
  li
    display: inline-block
    font-size: 1.4em
    font-family: "open sans condensed"
    font-weight: 200
    margin: 10px
    text-transform: uppercase
    
    a
      color: #fff
      &:hover
        color: $tealDark
    
    img
      width: 150px
      
#main
  background: $white
  border: 4px solid $tealDark
  border-left: none
  border-right: none
  padding: 20px
  
  img
    display: inline
    margin: 10px
    max-width: 200px
    
    #content
      a
        color: $teal !important
        &:visted
          color: $blue !important
    
  #sidebar
    h3
      background: url(<%= asset_path("dogpawprints-vlv-2.gif") %>) no-repeat left
      background-size: 20px 20px
      padding-left: 25px
  
#footer-nav
  li
    display: inline-block
    margin: 10px
    
    a
      color: $grayDark